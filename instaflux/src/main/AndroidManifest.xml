<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wordpress.android.fluxc.instaflux" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="org.wordpress.android.fluxc.instaflux.InstafluxApp"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name="org.wordpress.android.fluxc.instaflux.MainInstafluxActivity"
            android:label="@string/app_name"
            android:theme="@style/Instaflux">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.wordpress.android.fluxc.instaflux.PostActivity"
            android:label="@string/post"
            android:theme="@style/Instaflux"/>
    </application>

</manifest>
