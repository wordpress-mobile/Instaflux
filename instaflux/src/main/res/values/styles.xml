<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Instaflux" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonStyle">@style/FlatButtonStyle</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="FlatButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/transparent_black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

</resources>
